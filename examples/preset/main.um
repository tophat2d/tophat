
import (
	"th.um"
	"rect.um"
	"canvas.um"
	"window.um"

	"global.um"
)

fn main() {
	window.setup("title", 1280, 720)

	global.cam = rect.mk(0, 0, 192, 108)

	for true {
		window.cycle(global.cam)
		canvas.setColor(th.white)
		canvas.drawRect(global.cam)

		switch global.scene {
		case global.NONE:
			return
		}

		canvas.drawText("hello world", th.Vf2{2, 2}, th.black, 2)
	}
}
