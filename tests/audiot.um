
import (
	"std.um"
	"audio.um"
	"input.um"
	"th.um"
	"window.um"
)

var (
	s, s2: audio::Sound
)

fn init*() {
	var err: std::Err

	window::setup("audio test")
	window::setViewport(th::Vf2{400, 400})

	s, err = audio::load("demos/tetris/IDontWantToInfringeCopyrightSoListenToThisMonstrosity.wav")
	std::exitif(err)
	s.play()

	s.setVol(0.5)
	s.setPitch(0.5)

	s2, err = audio::load("demos/tetris/ClearMega.wav")
	std::exitif(err)
	s2.play()

	window::onFrame.register({
		if input::isJustPressedc('s') {
			s.stop()
			s.seekToFrame(0)
		}

		if input::isJustPressedc(' ') {
			s.play()
		}
	})
}
